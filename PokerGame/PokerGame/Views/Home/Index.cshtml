@model PokerGame.Library.Game

@{
    ViewBag.Title = "";
}
<section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            <div class="players cf">@foreach (var player in Model.Players)
                {
                    
                    <div class="player cf @player.Name.ToLower()">
                        <div class="playerName">@player.Name - @player.BestFinalHand.HandDescription</div>
                        <span class="card @player.HoleCards[0].CardClass"></span>
                        <span class="card @player.HoleCards[1].CardClass"></span> 
                    </div>
                }
            </div>
        <ul class="community-cards cf">
            <div>Communuity Cards</div>
            @foreach (var card in Model.CommunityCards)
            {
                <li><span class="card @card.CardClass"></span></li>
            }
        </ul>
        <div class="winner">@Model.WinnerText</div>
        <hgroup>
    </div>
</section>


